{
    "manifest_version" : 2,
    "name" : "Iridium",
    "version" : "0.0.5",
    "description" : "YouTube with more freedom",
    "default_locale" : "en",
    "icons" : {
        "16" : "icons/16.png",
        "32" : "icons/32.png",
        "48" : "icons/48.png",
        "64" : "icons/64.png",
        "128" : "icons/128.png"
    },
    "browser_action" : {
        "default_icon" : {
            "16" : "icons/16.png",
            "32" : "icons/32.png",
            "48" : "icons/48.png",
            "64" : "icons/64.png",
            "128" : "icons/128.png"
        }
    },
    "background" : {
        "scripts" : [
            "js/background.js"
        ],
        "persistent" : false
    },
    "content_scripts" : [
        {
            "matches" : [
                "*://www.youtube.com/*"
            ],
            "exclude_matches" : [
                "*://www.youtube.com/live_chat*",
                "*://www.youtube.com/embed/*",
                "*://www.youtube.com/tv*"
            ],
            "js" : [
                "js/Iridium.user.js"
            ],
            "css" : [
                "css/Iridium.css"
            ],
            "run_at" : "document_start"
        }
    ],
    "permissions" : [
        "storage"
    ],
    "applications" : {
        "gecko" : {
            "id" : "unlisted-iridium@particlecore.github.io",
            "strict_min_version" : "48.0",
            "update_url" : "https://github.com/ParticleCore/Iridium/raw/master/bin/update.json"
        }
    }
}
